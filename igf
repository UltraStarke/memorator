import  telebot
from telebot import types
import requests
import random
import os.path
from  PIL import Image, ImageDraw, ImageFont


fnt = ImageFont.truetype('/home/user/font.ttf',size = 50)


bot = telebot.TeleBot('TOKEN')

path = '/home/user/Загрузки/Мемы'
num_files = len([f for f in os.listdir(path)
                if os.path.isfile(os.path.join(path, f))])


@bot.message_handler(commands=["start"])
def start(m, res=False):
        markup=types.ReplyKeyboardMarkup(resize_keyboard=True)
        item1=types.KeyboardButton("Мем")
        item2=types.KeyboardButton("Тоже мем")
        markup.add(item1)
        markup.add(item2)
        bot.send_message(m.chat.id, 'Нажми: \nМем чтобы получить мем\nЕще мем — для другого мема ',  reply_markup=markup)

@bot.message_handler(content_types=['text'])
def get_text_messages(message):
    elif message.text == 'Мем' or message.text == 'Тоже мем':
        rnd = random.randint(1,num_files)
        mem = Image.open('/home/user/Mems/'+str(rnd)+'.jpg')
        mem.load()
        draw = ImageDraw.Draw(mem)
        draw.text((40,100),'Вот ваш мем',font = fnt)
        print(draw.size)
        bot.send_photo(message.from_user.id, mem)
    else:
        rnd = random.randint(1,num_files)
        mem = Image.open('/home/user/Загрузки/Мемы/'+str(rnd)+'.jpg')
        mem.load()
        cnt = int(mem.width/15)
        cnt1 = int(mem.height/10)
        fnt = ImageFont.truetype('/home/user/font.ttf',size = int(cnt1/2))
        strip = ImageDraw.Draw(mem)
        strip.rectangle((0,0,mem.width,cnt1), fill = 'black')
        draw = ImageDraw.Draw(mem)
        draw.text((cnt,int(cnt1/200)),message.text,font = fnt)
        bot.send_photo(message.from_user.id, mem)
    
@bot.message_handler(content_types=['photo'])
def photo(message):
    global num_files
    num_files = len([f for f in os.listdir(path)
                if os.path.isfile(os.path.join(path, f))])
    fileID = message.photo[-1].file_id
    file_info = bot.get_file(fileID)
    print(file_info)
    downloaded_file = bot.download_file(file_info.file_path)
    with open(path+'/'+str(num_files)+".jpg", 'wb') as new_file:
        new_file.write(downloaded_file)
    bot.send_message(message.from_user.id, 'я запомнил')

bot.polling(none_stop=True, interval=0)
